@model Patient

@{
    ViewData["Title"] = "Delete Patient";
}

<div class="container mt-4">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">⚠ Delete Patient</h4>
        </div>

        <div class="card-body">
            <div class="alert alert-warning">
                <strong>Are you sure?</strong> This action cannot be undone.
            </div>

            <div class="row mb-3">

                <div class="col-md-6">
                    <strong>File No:</strong>
                    <p class="text-muted">@Model.FileNo</p>
                </div>

                <div class="col-md-6">
                    <strong>Full Name:</strong>
                    <p class="text-muted">@($"{Model.FirstName} {Model.SecondName} {Model.ThirdName} {Model.FamilyName}")</p>
                </div>

                <div class="col-md-6">
                    <strong>National No:</strong>
                    <p class="text-muted">@Model.NationalNo</p>
                </div>

                <div class="col-md-6">
                    <strong>Mother Name:</strong>
                    <p class="text-muted">@Model.MotherName</p>
                </div>

                <div class="col-md-6">
                    <strong>DOB:</strong>
                    <p class="text-muted">@Model.DOB</p>
                </div>

                <div class="col-md-6">
                    <strong>Age:</strong>
                    <p class="text-muted">@Model.Age</p>
                </div>

                <div class="col-md-6">
                    <strong>Place Of Birth:</strong>
                    <p class="text-muted">@Model.PlaceOfBirth</p>
                </div>

                <div class="col-md-6">
                    <strong>Telephone:</strong>
                    <p class="text-muted">@Model.TelephoneNo</p>
                </div>

                <div class="col-md-6">
                    <strong>Email:</strong>
                    <p class="text-muted">@Model.Email</p>
                </div>

                <div class="col-md-6">
                    <strong>Gender:</strong>
                    <p class="text-muted">@Model.Gender</p>
                </div>

                <div class="col-md-6">
                    <strong>Nationality:</strong>
                    <p class="text-muted">@Model.Nationality</p>
                </div>

                <div class="col-md-12">
                    <strong>Comments:</strong>
                    <p class="text-muted">@Model.Comments</p>
                </div>

            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="PatientId" />

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        ⬅ Back to List
                    </a>

                    <button type="submit" class="btn btn-danger px-4">
                        🗑 Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

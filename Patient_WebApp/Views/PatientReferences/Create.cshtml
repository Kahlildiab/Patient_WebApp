@model WebApp_Patient.Models.PatientReference

@{
    ViewData["Title"] = "Create Patient Reference";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Create New Patient Reference</h4>
        </div>

        <div class="card-body">
            <form asp-action="Create" asp-controller="PatientReferences" method="post">
                <div asp-validation-summary="All" class="alert alert-danger"></div>

                <input type="hidden" asp-for="PatientId" value="@ViewBag.PatientId" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="ReferenceName" class="form-label"></label>
                        <input asp-for="ReferenceName" class="form-control" />
                        <span asp-validation-for="ReferenceName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Telephone" class="form-label"></label>
                        <input asp-for="Telephone" class="form-control" />
                        <span asp-validation-for="Telephone" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="RelationShip" class="form-label"></label>
                        <input asp-for="RelationShip" class="form-control" />
                        <span asp-validation-for="RelationShip" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Religion" class="form-label"></label>
                        <input asp-for="Religion" class="form-control" />
                        <span asp-validation-for="Religion" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Nationality" class="form-label">Nationality</label>
                        <select asp-for="Nationality" class="form-select">
                            <option value="">-- Select Nationality --</option>
                            <option>Egyptian</option>
                            <option>Saudi</option>
                            <option>Syrian</option>
                            <option>Jordanian</option>
                            <option>Lebanese</option>
                            <option>Iraqi</option>
                            <option>Palestinian</option>
                            <option>Emirati</option>
                            <option>Kuwaiti</option>
                            <option>Qatari</option>
                            <option>Omani</option>
                            <option>Yemeni</option>
                        </select>
                        <span asp-validation-for="Nationality" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">⬅ Back</a>
                    <button type="submit" class="btn btn-success px-4">💾 Create</button>
                </div>
            </form>
        </div>
    </div>
</div>



@model IEnumerable<WebApp_Patient.Models.PatientReference>

@{
    ViewData["Title"] = "Patient References";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Patient References</h4>
            <a asp-action="Create" class="btn btn-light btn-sm">
                ➕ Create New
            </a>
        </div>

        <div class="card-body">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Reference Name</th>
                        <th>Telephone</th>
                        <th>Relationship</th>
                        <th>Address</th>
                        <th>Religion</th>
                        <th>Nationality</th>
                        <th>National No</th>
                        <th>Patient</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ReferenceName</td>
                            <td>@item.Telephone</td>
                            <td>@item.RelationShip</td>
                            <td>@item.Address</td>
                            <td>@item.Religion</td>
                            <td>@item.Nationality</td>
                            <td>@item.NationalNo</td>
                            <td>
                                <span class="badge bg-info">
                                    @item.Patient?.FamilyName
                                </span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.ReferenceId"
                                   class="btn btn-sm btn-warning me-1">
                                    Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ReferenceId"
                                   class="btn btn-sm btn-info me-1">
                                    Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ReferenceId"
                                   class="btn btn-sm btn-danger">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@model WebApp_Patient.Models.Address

@{
    ViewData["Title"] = "Edit Address";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Edit Address</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="All" class="alert alert-danger"></div>

                <input type="hidden" asp-for="AddressId" />

                <div class="row g-3">

                    <div class="col-md-4">
                        <label asp-for="Country" class="form-label"></label>
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Region" class="form-label"></label>
                        <input asp-for="Region" class="form-control" />
                        <span asp-validation-for="Region" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="City" class="form-label"></label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Addresses" class="form-label"></label>
                        <input asp-for="Addresses" class="form-control" />
                        <span asp-validation-for="Addresses" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="BusinessAddress" class="form-label"></label>
                        <input asp-for="BusinessAddress" class="form-control" />
                        <span asp-validation-for="BusinessAddress" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="BusinessTelephone" class="form-label"></label>
                        <input asp-for="BusinessTelephone" class="form-control" />
                        <span asp-validation-for="BusinessTelephone" class="text-danger"></span>
                    </div>

                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        ⬅ Back
                    </a>

                    <button type="submit" class="btn btn-warning px-4">
                        💾 Update
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


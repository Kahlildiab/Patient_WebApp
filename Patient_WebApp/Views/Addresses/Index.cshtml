@model IEnumerable<WebApp_Patient.Models.Address>
@{
    ViewData["Title"] = "Address List";
}
<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Addresses</h4>
            <a asp-action="Create" class="btn btn-light btn-sm">
                ➕ Create New
            </a>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Country</th>
                        <th>Region</th>
                        <th>City</th>
                        <th>Address</th>
                        <th>Business Address</th>
                        <th>Business Telephone</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Country</td>
                            <td>@item.Region</td>
                            <td>@item.City</td>
                            <td>@item.address</td>
                            <td>@item.BusinessAddress</td>
                            <td>@item.BusinessTelephone</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.AddressId" class="btn btn-sm btn-warning me-1">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.AddressId" class="btn btn-sm btn-info me-1">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.AddressId" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>